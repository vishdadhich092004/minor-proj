{
  "version": 2,
  "outputDirectory": "build/web",
  "buildCommand": "flutter build web --release",
  "installCommand": "if cd .fvm; then cd ..; fvm flutter pub get; else flutter pub get; fi",
  "framework": null,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}

